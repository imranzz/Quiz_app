<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.andriod.quizapp.ScoreActivity">

    <TextView
        style="@style/Categorystyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Score" />

    <TextView
        android:id="@+id/score_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="0"
        android:textSize="56sp" />

    <TextView
        style="@style/Categorystyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Answers" />

    <TextView
        style="@style/SubCategorystyle"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="1) Goods And Services Tax." />

    <TextView
        style="@style/SubCategorystyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2) Canada." />

    <TextView
        style="@style/SubCategorystyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3) Service Tax." />

    <TextView
        style="@style/SubCategorystyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4) To increase government revenue." />

    <TextView
        style="@style/SubCategorystyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5) All are Correct. " />

    <TextView
        style="@style/SubCategorystyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6) Arun Jaitley." />


</LinearLayout>
